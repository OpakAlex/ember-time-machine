<div class="row">
	<div class="col s6">
		{{#each model.activeTasks as |task|}}
				{{#md-card class="col s3 offset-s1"}}
					{{#md-card-content}}
						{{task.text}}
					{{/md-card-content}}
					{{#md-card-action}}
						{{md-check checked=task.isCompleted}}
					{{/md-card-action}}
				{{/md-card}}
    {{/each}}
	</div>
	<div class="col s6">
		{{#each model.completedTasks as |task|}}
				{{#md-card class="col s3 offset-s1"}}
					{{#md-card-content}}
						{{task.text}}
					{{/md-card-content}}
					{{#md-card-action}}
						{{md-check checked=task.isCompleted}}
					{{/md-card-action}}
				{{/md-card}}
    {{/each}}
	</div>
</div>

{{#md-fixed-btns
	class="fixed-btns-example"
	btnIcon="fa fa-undo"
	btnClass="btn-large grey"
	action="undo"}}

	{{md-fixed-btn
		btnClass="indigo"
		btnIcon="fa fa-floppy-o"
		action="commit"}}

	{{md-fixed-btn
		btnClass="deep-purple"
		btnIcon="fa fa-repeat all"
		action="redoAll"}}

	{{md-fixed-btn
		btnClass="green"
		btnIcon="fa fa-undo all"
		action="undoAll"}}

	{{md-fixed-btn
		btnClass="green"
		btnIcon="fa fa-repeat"
		action="redo"}}
{{/md-fixed-btns}}
