<h1>Object</h1>

<h2>User</h2>
{{input value=model.firstName}}

<h2>User.Friend</h2>
{{input value=model.friend.firstName}}

<h2>User.Friend.Friend</h2>
{{input value=model.friend.friend.firstName}}

<h1>Array</h1>

<h2>User.Tags</h2>
<ul>
  {{#each model.tags as |tag|}}
    <li>{{input value=tag}} <span><button type="button" name="button" {{action 'removeTag' tag}}>Remove</button></span></li>
  {{/each}}
</ul>

<label for="">Add Tag</label>
{{input value=tag enter=(action 'addTag')}}


<h1>DS.Model</h1>

<h2>Model</h2>
{{input value=model.dsModel.firstName}}

<h2>Model.Friends</h2>
<ul>
  {{#each model.dsModel.friends as |friend|}}
    <li>{{input value=friend.firstName}}</li>
  {{/each}}
</ul>

<h2>Actions</h2>
<button type="button" name="button" {{action 'undo'}} disabled={{not model.canUndo}}>Undo</button>
<button type="button" name="button" {{action 'redo'}} disabled={{not model.canRedo}}>Redo</button>
<button type="button" name="button" {{action 'undoAll'}} disabled={{not model.canUndo}}>Undo All</button>
<button type="button" name="button" {{action 'redoAll'}} disabled={{not model.canRedo}}>Redo All</button>
